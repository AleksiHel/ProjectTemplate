@model User



<div class="container-sm p-3 align-content-center" style="max-width: 500px;">
    <h1 class="text-center fw-bold">Logga in</h1>
    <form asp-controller="Login" asp-action="login" method="post" class="d-flex flex-column align-items-center">
        <div class="form-group p-1">
            <label for="usernameInput">Username</label>
            <input type="text" name="name" class="form-control" id="usernameInput" placeholder="Enter username">
        </div>
        <div class="form-group p-1">
            <label for="passwordInput">Password</label>
            <input type="password" name="password" class="form-control" id="passwordInput" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-dark p-1 mt-1 mb-2">Submit</button>
    </form>
</div>
