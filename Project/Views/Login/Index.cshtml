@model User



<div class="container-sm p-3 align-content-center" style="max-width: 500px;">
    <h1 class="text-center fw-bold">Log in</h1>
    <form asp-controller="Login" asp-action="Login" method="post" class="d-flex flex-column align-items-center">
        <div class="form-group p-1">
            <label asp-for="Username" class="form-label">Name</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group p-1">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-dark p-1 mt-1 mb-2">Log in</button>
    </form>
</div>
