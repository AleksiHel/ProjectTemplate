@model User

<div class="container-sm p-3 align-content-center" style="max-width: 500px;">
    <h1 class="text-center fw-bold">Register account</h1>
    <form asp-controller="Register" asp-action="Index" method="post" class="d-flex flex-column align-items-center">
        <div class="form-group p-1">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group p-1">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-dark p-1 mt-1 mb-2">Register</button>
    </form>



        @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger text-center">
            @foreach (var item in ViewData.ModelState.Values)
            {
                foreach (var error in item.Errors)
                {
                    <p>@error.ErrorMessage</p>
                }
            }
        </div>
    }

</div>
